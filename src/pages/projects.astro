---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Github Projects</div>
  </div>

  <HorizontalCard
        title="My personal website"
        img="/post_img.webp"
        desc="Ventured a bit into the world of Astro to create my personal website. I really liked the responsiveness and speed of rendering which got me to try it out myself."
        url="#"
  />
  <HorizontalCard
      title="Wordle project"
      img="/wordle.png"
      desc="Part of the training that i'm doing on learning React, this exercise taught me the basics of the library, state and props."
      url="https://github.com/brotundusol/project-wordle"
  />
</BaseLayout>
